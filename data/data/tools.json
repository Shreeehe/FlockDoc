    "broiler_vaccination": {
        "title": "Broiler Vaccination Schedule",
        "duration": "35-42 days",
        "schedule": [
            {
                "day": 1,
                "age": "Day 1",
                "vaccine": "Marek's Disease + ND-IB",
                "route": "Subcutaneous/Spray at hatchery",
                "notes": "Usually done at hatchery before delivery"
            },
            {
                "day": 7,
                "age": "Day 7",
                "vaccine": "Newcastle Disease (Lasota/B1)",
                "route": "Eye drop/Drinking water",
                "notes": "First field vaccination"
            },
            {
                "day": 14,
                "age": "Day 14",
                "vaccine": "IBD/Gumboro (Intermediate)",
                "route": "Drinking water",
                "notes": "Critical for immunity; timing depends on maternal antibody"
            },
            {
                "day": 21,
                "age": "Day 21",
                "vaccine": "IBD Booster (if needed)",
                "route": "Drinking water",
                "notes": "Only if high challenge area"
            },
            {
                "day": 24,
                "age": "Day 24",
                "vaccine": "Newcastle Disease Booster",
                "route": "Drinking water",
                "notes": "Optional but recommended"
            }
        ],
        "tips": [
            "Vaccinate only healthy birds",
            "Use clean, chlorine-free water for vaccines",
            "Vaccinate early morning when birds are thirsty",
            "Prepare only the amount needed - don't store reconstituted vaccine",
            "Keep vaccines cold (2-8°C) until use"
        ]
    },
